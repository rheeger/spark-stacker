{
  "log_level": "DEBUG",
  "logging": {
    "log_to_file": true,
    "enable_console": true,
    "connector_log_level": "DEBUG",
    "show_market_details": false,
    "show_zero_balances": false
  },
  "webhook_enabled": true,
  "webhook_port": 8080,
  "webhook_host": "0.0.0.0",
  "metrics_port": 9000,
  "metrics_host": "0.0.0.0",
  "metrics_publish_historical": true,
  "max_parallel_trades": 1,
  "polling_interval": 30,
  "dry_run": false,
  "max_account_risk_pct": 0.1,
  "max_leverage": 1.0,
  "max_position_size_usd": 0.1,
  "max_positions": 1,
  "min_margin_buffer_pct": 50.0,
  "enable_hedging": false,
  "exchanges": [
    {
      "name": "hyperliquid",
      "exchange_type": "hyperliquid",
      "wallet_address": "${WALLET_ADDRESS}",
      "private_key": "${PRIVATE_KEY}",
      "testnet": "${HYPERLIQUID_TESTNET}",
      "enabled": true,
      "use_as_main": true,
      "use_as_hedge": false
    },
    {
      "name": "coinbase",
      "exchange_type": "coinbase",
      "api_key": "${COINBASE_API_KEY}",
      "api_secret": "${COINBASE_API_SECRET}",
      "use_sandbox": "${COINBASE_USE_SANDBOX}",
      "enabled": false,
      "use_as_main": false,
      "use_as_hedge": false
    },
    {
      "name": "kraken",
      "exchange_type": "kraken",
      "api_key": "${KRAKEN_API_KEY}",
      "api_secret": "${KRAKEN_API_SECRET}",
      "testnet": "${KRAKEN_USE_SANDBOX}",
      "enabled": false,
      "use_as_main": false,
      "use_as_hedge": false
    }
  ],
  "strategies": [
    {
      "name": "eth_strategy",
      "market": "ETH",
      "enabled": false,
      "main_leverage": 1.0,
      "hedge_leverage": 1.0,
      "hedge_ratio": 0,
      "stop_loss_pct": 5.0,
      "take_profit_pct": 10.0,
      "max_position_size": 0.1,
      "risk_per_trade_pct": 0.01
    }
  ],
  "indicators": [
    {
      "name": "eth_rsi",
      "type": "rsi",
      "enabled": true,
      "parameters": {
        "period": 14,
        "overbought": 70,
        "oversold": 30,
        "signal_period": 1
      }
    },
    {
      "name": "macd_eth_usd_1m",
      "type": "macd",
      "enabled": false,
      "parameters": {
        "fast_period": 8,
        "slow_period": 21,
        "signal_period": 7
      }
    }
  ]
}
