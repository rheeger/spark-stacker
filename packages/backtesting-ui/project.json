{
  "name": "backtesting-ui",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/backtesting-ui/src",
  "projectType": "application",
  "tags": [],
  "// targets": "to see all targets run: nx show project backtesting-ui --web",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/packages/backtesting-ui"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "backtesting-ui:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "backtesting-ui:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "backtesting-ui:build:production",
          "hmr": false
        }
      }
    },
    "preview": {
      "executor": "@nx/vite:preview-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "backtesting-ui:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "backtesting-ui:build:development"
        },
        "production": {
          "buildTarget": "backtesting-ui:build:production"
        }
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/backtesting-ui"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/backtesting-ui/**/*.{js,jsx,ts,tsx}"]
      }
    }
  }
}
